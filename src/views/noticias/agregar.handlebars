<head>
<link rel="stylesheet" href="/css/agregarNoticia.css">
<link rel="stylesheet" href="/css/agregarDeporte.css">
</head>
<body>
    <div class="container">
        <div class="top">
            <h3>Agregar noticia</h3>
            <a href="/noticias">
                <i class="text-2xl fa-solid fa-backward"></i>
            </a>
        </div>
        <form action="/noticias/agregar" enctype="multipart/form-data" method="post">
            <label for="titulo">
                <span>Titulo de la noticia</span>
                <input type="text" name="titulo" required autofocus>
            </label>
            <div class="textarea">
                <label for="descripcion">
                    <span>Descripci√≥n</span>
                </label>
                <textarea name="descripcion" cols="20" rows="5" required></textarea>
            </div>
            <label for="img">
                <span>Imagen</span>
                <input type="file" name="img" required>
            </label>
            <label class="tipodeporte">   
                <span class="tipodeporte">Tipo de deporte</span>
                <select name="tipodeporte" class="tipodeporte" required>
                    {{#each deporte}}
                    <option value={{id}}>{{nombre}}</option>
                    {{/each}}
                </select>
            </label>
            <label for="fecha">
                <span>Fecha</span>
                <input type="datetime-local" name="fecha" required>
            </label>
            <button type="submit" class="submit-btn">Guardar</button>
            <div class="separator">
                <hr>
                <span>Agregar nuevo deporte</span>
                <hr>
            </div>
            <button id="abrirModal" type="button" class="submit-btn-otro">Nuevo deporte</button>
        </form>
    </div>
    
    <div id="modal" class="container-modal">
        <div class="content-modal">
            <div class="top-modal">
                <h3>Agregar deporte</h3>
                <a id="cerrarModal" type="button">
                    <i class="fa-sharp fa-solid fa-xmark"></i>
                </a>
            </div>
            <form action="/noticias/agregarDeporte" method="post">
                <label for="nombre">
                    <span>Nombre del deporte</span>
                    <input type="text" name="nombre" required autofocus>
                </label>
                <button id="cerrarModal" type="submit" class="submit-btn-modal">Agregar</button>
            </form>
        </div>
    </div>
</body>
    